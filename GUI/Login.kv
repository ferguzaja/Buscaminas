#:include registro.kv

<Login>:
    FloatLayout:
        Image:
            source:"fondo1_1.jpg"
            size_hint_y:2.5
            size_hint_x: 2.5
            pos:-50,-350

        Image:
            source:"mina2.png"
            width: .1
            size_hint_x: 1
            size_hint_y: 1
            pos: 0,80

        BubbleButton:
            text:'Registrarse'
            font_size: 16
            size_hint_x: .5
            size_hint_y: .08
            pos: 80,140
            on_press: root.do_login()
            background_color:(1,0,0,1)

        BubbleButton:
            text:'Iniciar Sesion'
            font_size: 16
            size_hint_x: .5
            size_hint_y: .08
            pos: 80,60
            background_color:(1,0,0,1)

        Button:
            background_color:[0,0,0,1]
            size_hint_y:.1
            size_hint_x:.15
            pos:250,435
            allow_stretch: True
        Image:
            source:'imagenes/engrane.png'
            size_hint:(.15,.15)
            pos: 250,420









